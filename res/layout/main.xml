<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="#FFEAAD"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="154dp"
            android:background="#EEFABC">
        <TextView
                android:textSize="55dp"
                android:textStyle="bold"
                android:textColor="#f14a2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="KitchenSync"
                android:id="@+id/header_KitchenSync"
                android:layout_marginTop="23dp"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header_date"
                android:layout_alignLeft="@+id/header_KitchenSync" android:layout_below="@+id/header_KitchenSync"
                android:layout_alignRight="@+id/header_KitchenSync"
                android:textStyle="italic" android:textSize="10dp" android:textColor="#f14a2a"/>
    </RelativeLayout>
    <ExpandableListView android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/menu_expandable"
                            android:background="#EEFABC">

        </ExpandableListView>
</LinearLayout>