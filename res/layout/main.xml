<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/background_Color"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:id="@+id/menuBar"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:background="@color/background_Color">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="defaultDateText"
                android:textStyle="italic" android:textSize="14dp"
                android:textColor="@color/textColor"
                android:id="@+id/header_date"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preferencesImageButton"
                android:src="@drawable/settings"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentMealDateDisplay"
                android:id="@+id/currentMealDateDisplay" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="14dp" android:textStyle="italic"/>
    </RelativeLayout>
    <RelativeLayout
            android:background="@color/secondaryColor"
            android:layout_width="fill_parent"
            android:layout_height="7dp">
    </RelativeLayout>
    <ExpandableListView android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/menu_expandable"
                        android:background="@color/trimColor">

    </ExpandableListView>
</LinearLayout>